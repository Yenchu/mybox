<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="baseLayout" template="/WEB-INF/templates/layout.jsp" />

	<definition name="simpleLayout" extends="baseLayout">
		<put-attribute name="header">
			<definition template="/WEB-INF/templates/empty.jsp" />
		</put-attribute>
		<put-attribute name="body">
			<definition template="/WEB-INF/templates/content.jsp" />
		</put-attribute>
		<put-attribute name="footer">
			<definition template="/WEB-INF/templates/empty.jsp" />
		</put-attribute>
	</definition>
	
	<definition name="topNavLayout" extends="baseLayout">
		<put-attribute name="header" cascade="true">
			<definition template="/WEB-INF/templates/header.jsp" />
		</put-attribute>
		<put-attribute name="footer" cascade="true">
			<definition template="/WEB-INF/templates/footer.jsp" />
		</put-attribute>
	</definition>
	
	<definition name="contentOnlyLayout" extends="topNavLayout">
		<put-attribute name="body" cascade="true">
			<definition template="/WEB-INF/templates/content.jsp" />
		</put-attribute>
	</definition>
	
	<definition name="leftNavContentLayout" extends="topNavLayout">
		<put-attribute name="body" cascade="true">
			<definition template="/WEB-INF/templates/leftNavContent.jsp" />
		</put-attribute>
	</definition>

	<definition name="login" extends="simpleLayout">
		<put-attribute name="content" value="/WEB-INF/views/login/login.jsp" cascade="true" />
		<put-list-attribute name="csses">
			<add-attribute value="/WEB-INF/views/login/loginCss.jsp" />
		</put-list-attribute>
		<put-list-attribute name="jses">
			<add-attribute value="/WEB-INF/views/login/loginJs.jsp" />
		</put-list-attribute>
	</definition>

	<definition name="fileLayout" extends="leftNavContentLayout">
		<put-attribute name="leftNav" value="/WEB-INF/views/files/fileLeftNav.jsp" cascade="true" />
		<put-list-attribute name="csses">
			<add-attribute value="/WEB-INF/views/files/fileCss.jsp" />
		</put-list-attribute>
		<put-list-attribute name="jses">
			<add-attribute value="/WEB-INF/views/files/fileJs.jsp" />
		</put-list-attribute>
	</definition>

	<definition name="files" extends="fileLayout">
		<put-attribute name="content" value="/WEB-INF/views/files/files.jsp" cascade="true" />
	</definition>
</tiles-definitions>